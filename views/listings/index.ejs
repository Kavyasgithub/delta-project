<script>
  // Tax switch functionality
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(let info of taxInfo){
      if(info.style.display !== "block"){
        info.style.display = "block";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Filter functionality
  document.addEventListener('DOMContentLoaded', function() {
    const filterItems = document.querySelectorAll('.filter-item');
    
    filterItems.forEach(item => {
      item.addEventListener('click', function() {
        // Remove active class from all filters
        filterItems.forEach(f => f.classList.remove('active'));
        // Add active class to clicked filter
        this.classList.add('active');
        
        // Here you can add filtering logic based on data-filter attribute
        const filterType = this.getAttribute('data-filter');
        console.log('Filter selected:', filterType);
      });
    });

    // Enhanced image loading with error handling and debugging
    const images = document.querySelectorAll('.card-img-top');
    console.log(`Found ${images.length} images to load`);
    
    images.forEach((img, index) => {
      console.log(`Image ${index + 1}: ${img.src}`);
      
      img.addEventListener('load', function() {
        console.log(`Image ${index + 1} loaded successfully`);
        this.classList.add('loaded');
      });
      
      img.addEventListener('error', function() {
        console.error(`Image ${index + 1} failed to load: ${this.src}`);
        this.src = 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=60';
      });
    });

    // Favorite button functionality
    const favoriteButtons = document.querySelectorAll('.favorite-btn');
    favoriteButtons.forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const icon = this.querySelector('i');
        if(icon.classList.contains('fa-regular')) {
          icon.classList.remove('fa-regular');
          icon.classList.add('fa-solid');
          icon.style.color = '#FF385C';
        } else {
          icon.classList.remove('fa-solid');
          icon.classList.add('fa-regular');
          icon.style.color = '#717171';
        }
      });
    });

    // Smooth scrolling for filters
    const filtersScroll = document.getElementById('filtersScroll');
    let isScrolling = false;

    function scrollFilters(direction) {
      if (isScrolling) return;
      isScrolling = true;
      
      const scrollAmount = 200;
      const currentScroll = filtersScroll.scrollLeft;
      const targetScroll = direction === 'left' 
        ? currentScroll - scrollAmount 
        : currentScroll + scrollAmount;
      
      filtersScroll.scrollTo({
        left: targetScroll,
        behavior: 'smooth'
      });
      
      setTimeout(() => {
        isScrolling = false;
      }, 300);
    }

    // Add scroll buttons if content overflows
    function checkScrollButtons() {
      const container = filtersScroll.parentElement;
      if (filtersScroll.scrollWidth > filtersScroll.clientWidth) {
        // Add scroll buttons if not already present
        if (!container.querySelector('.scroll-button')) {
          const leftBtn = document.createElement('button');
          leftBtn.className = 'scroll-button scroll-left d-none d-lg-flex';
          leftBtn.innerHTML = '<i class="fa-solid fa-chevron-left"></i>';
          leftBtn.onclick = () => scrollFilters('left');
          
          const rightBtn = document.createElement('button');
          rightBtn.className = 'scroll-button scroll-right d-none d-lg-flex';
          rightBtn.innerHTML = '<i class="fa-solid fa-chevron-right"></i>';
          rightBtn.onclick = () => scrollFilters('right');
          
          container.appendChild(leftBtn);
          container.appendChild(rightBtn);
        }
      }
    }

    checkScrollButtons();
    window.addEventListener('resize', checkScrollButtons);

    // Hero slideshow
    const heroSlides = document.querySelectorAll('.hero-slide');
    if (heroSlides.length > 1) {
      let currentSlide = 0;
      
      function showNextSlide() {
        heroSlides[currentSlide].classList.remove('active');
        currentSlide = (currentSlide + 1) % heroSlides.length;
        heroSlides[currentSlide].classList.add('active');
      }
      
      // Change slide every 5 seconds
      setInterval(showNextSlide, 5000);
    }

    // Hero button interaction
    const heroBtn = document.querySelector('.btn-hero');
    if (heroBtn) {
      heroBtn.addEventListener('click', function() {
        document.querySelector('#filters').scrollIntoView({ 
          behavior: 'smooth' 
        });
      });
    }
  });

  // Enhanced image loading with error handling
  document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('.card-img-top');
    images.forEach(img => {
      // Set initial state - show images immediately instead of hiding them
      img.style.opacity = '1';
      img.style.transition = 'opacity 0.3s ease';
      
      img.addEventListener('load', function() {
        this.style.opacity = '1';
        this.classList.add('loaded');
      });
      
      img.addEventListener('error', function() {
        console.log('Image failed to load:', this.src);
        // Set a placeholder image on error
        this.src = 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=60';
        this.style.opacity = '1';
      });
    });
  });
</script>

