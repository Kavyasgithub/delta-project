<% layout("/layouts/boilerplate")%>

<style>
  .listing-header {
    margin-bottom: 24px;
  }
  
  .listing-title {
    font-size: 26px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 8px;
  }
  
  .listing-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }
  
  .rating-badge {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .image-gallery {
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 32px;
    box-shadow: var(--shadow-light);
  }
  
  .main-image {
    width: 100%;
    height: 60vh;
    object-fit: cover;
    display: block;
  }
  
  .listing-details {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 48px;
    margin-bottom: 32px;
  }
  
  .details-section {
    background: white;
  }
  
  .host-info {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 24px 0;
    border-bottom: 1px solid var(--border-light);
  }
  
  .host-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #FF385C 0%, #E31C5F 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 18px;
  }
  
  .host-details h6 {
    margin: 0;
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .host-details p {
    margin: 0;
    font-size: 14px;
    color: var(--text-secondary);
  }
  
  .description-section {
    padding: 24px 0;
    border-bottom: 1px solid var(--border-light);
  }
  
  .booking-card {
    background: white;
    border: 1px solid var(--border-light);
    border-radius: 12px;
    box-shadow: var(--shadow-medium);
    padding: 24px;
    position: sticky;
    top: 100px;
    height: fit-content;
  }
  
  .price-display {
    display: flex;
    align-items: baseline;
    gap: 8px;
    margin-bottom: 20px;
  }
  
  .price-amount {
    font-size: 22px;
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .price-period {
    font-size: 16px;
    color: var(--text-secondary);
  }
  
  .action-buttons {
    display: flex;
    gap: 12px;
    margin-top: 24px;
  }
  
  @media (max-width: 992px) {
    .listing-details {
      grid-template-columns: 1fr;
      gap: 24px;
    }
    
    .booking-card {
      position: static;
    }
    
    .main-image {
      height: 50vh;
    }
  }
  
  @media (max-width: 768px) {
    .listing-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }
    
    .main-image {
      height: 40vh;
    }
  }
</style>

<div class="container-fluid px-0">
  <div class="container">
    <div class="listing-header">
      <h1 class="listing-title"><%- listing.title %></h1>
      <div class="listing-meta">
        <div class="rating-badge">
          <i class="fa-solid fa-star" style="color: #FFD700;"></i>
          <span>4.8</span>
          <span>(127 reviews)</span>
        </div>
        <span>•</span>
        <span><%= listing.location %>, <%= listing.country %></span>
      </div>
    </div>

    <div class="image-gallery">
      <img src="<%= listing.image.url %>" class="main-image" alt="<%= listing.title %>" />
    </div>

    <div class="listing-details">
      <div class="details-section">
        <div class="host-info">
          <div class="host-avatar">
            <%= listing.owner.username.charAt(0).toUpperCase() %>
          </div>
          <div class="host-details">
            <h6>Hosted by <%= listing.owner.username %></h6>
            <p>Superhost • Hosting for 2 years</p>
          </div>
        </div>

        <div class="description-section">
          <h5 style="margin-bottom: 16px; font-weight: 600;">About this place</h5>
          <p style="color: var(--text-secondary); line-height: 1.6;">
            <%= listing.description %>
          </p>
        </div>
      </div>

      <div class="booking-card">
        <div class="price-display">
          <span class="price-amount">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
          <span class="price-period">night</span>
        </div>
        
        <button class="btn btn-primary w-100 mb-3" style="padding: 14px; font-weight: 600;">
          Reserve
        </button>
        
        <p class="text-center mb-0" style="font-size: 14px; color: var(--text-secondary);">
          You won't be charged yet
        </p>
      </div>
    </div>
  </div>
</div>

<% if(currUser && listing.owner._id.equals(currUser._id)) { %>
<div class="container">
  <div class="action-buttons justify-content-start">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary">
      <i class="fa-solid fa-edit me-2"></i>Edit Listing
    </a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
      <button class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this listing?')">
        <i class="fa-solid fa-trash me-2"></i>Delete Listing
      </button>
    </form>
  </div>
</div>
<% } %>


<div class="container">
  <div class="reviews-section">
    <div class="reviews-header mb-4">
      <h4 style="font-weight: 600; margin-bottom: 24px;">
        <i class="fa-solid fa-star" style="color: #FFD700;"></i>
        4.8 • <%= listing.reviews.length %> reviews
      </h4>
    </div>

    <% if(currUser) { %>
    <div class="review-form-card mb-5">
      <div class="card" style="border: 1px solid var(--border-light); border-radius: 12px; box-shadow: var(--shadow-light);">
        <div class="card-body p-4">
          <h5 class="mb-3" style="font-weight: 600;">Leave a Review</h5>
          <form action="/listings/<%= listing._id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="rating" class="form-label" style="font-weight: 600;">Rating</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            
            <div class="mb-3">
              <label for="comment" class="form-label" style="font-weight: 600;">Comments</label>
              <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control" placeholder="Share your experience..." required></textarea>
              <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            
            <button class="btn btn-primary" type="submit">
              <i class="fa-solid fa-paper-plane me-2"></i>Submit Review
            </button>
          </form>
        </div>
      </div>
    </div>
    <% } %>

    <% if(listing.reviews.length > 0) { %>
    <div class="reviews-grid">
      <div class="row g-4">
        <% for(review of listing.reviews) { %>
          <div class="col-md-6">
            <div class="review-card">
              <div class="d-flex align-items-start gap-3 mb-3">
                <div class="reviewer-avatar">
                  <%= review.author.username.charAt(0).toUpperCase() %>
                </div>
                <div class="flex-grow-1">
                  <h6 class="mb-1" style="font-weight: 600;"><%= review.author.username %></h6>
                  <div class="d-flex align-items-center gap-2 mb-2">
                    <div class="starability-result" data-rating="<%= review.rating %>"></div>
                    <small class="text-muted">• Just now</small>
                  </div>
                  <p class="review-text mb-0" style="color: var(--text-secondary); line-height: 1.5;">
                    <%= review.comment %>
                  </p>
                </div>
              </div>
              
              <% if(currUser && review.author._id.equals(currUser._id)) { %>
              <div class="review-actions">
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                  <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this review?')">
                    <i class="fa-solid fa-trash"></i>
                  </button>
                </form>
              </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <% } else { %>
    <div class="text-center py-5">
      <i class="fa-regular fa-comment" style="font-size: 48px; color: var(--text-light); margin-bottom: 16px;"></i>
      <h5 style="color: var(--text-secondary);">No reviews yet</h5>
      <p style="color: var(--text-light);">Be the first to share your experience!</p>
    </div>
    <% } %>
  </div>
</div>

<style>
  .reviews-section {
    padding: 48px 0;
    border-top: 1px solid var(--border-light);
    margin-top: 48px;
  }
  
  .review-card {
    background: white;
    border: 1px solid var(--border-light);
    border-radius: 12px;
    padding: 20px;
    transition: var(--transition);
    height: 100%;
  }
  
  .review-card:hover {
    box-shadow: var(--shadow-light);
  }
  
  .reviewer-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #FF385C 0%, #E31C5F 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 14px;
    flex-shrink: 0;
  }
  
  .review-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid var(--border-light);
  }
  
  .review-text {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>